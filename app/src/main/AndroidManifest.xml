<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.csumb.pdahl.project2">

    <!-- To auto-complete the email text field in the LoginActivity form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.AirlineTicket">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.CreateAccountActivity" />
        <activity android:name=".ui.ReserveSeatActivity" />
        <activity android:name=".ui.CancelReservation" />
        <activity android:name=".ui.ManageSystem" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.SelectFlightActivity" />
        <activity android:name=".ui.AddFlightActivity" />
        <activity android:name=".ui.ReservationsActivity"></activity>
    </application>

</manifest>