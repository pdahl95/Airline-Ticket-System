<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReservationsActivity">


    <TextView
        android:id="@+id/textView_display_reservations"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="33dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="37dp"
        android:gravity="center"
        android:text="Available Reservations"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <ScrollView
        android:id="@+id/scrollView_display_reservations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_display_reservations"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp">

        <RadioGroup
            android:id="@+id/radioGroup_reservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


    </ScrollView>

    <Button
        android:id="@+id/button_cancel_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Reservation"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:textSize="18sp"
        android:textColor="#ffff"
        />

</RelativeLayout>