<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar"
    >


    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/textView_title"
        android:textColor="@color/colorAccent"
        android:textSize="32sp"
        android:textStyle="italic|bold" />

    <EditText
        android:id="@+id/editText_flightNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="108dp"
        android:ems="10"
        android:hint="Flight Number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_deptature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_flightNum"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="109dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Departure City" />

    <EditText
        android:id="@+id/editText_arrival"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/editText_deptature"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="277dp"
        android:ems="10"
        android:hint="Arrival City"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_deptTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_arrival"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="-278dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="102dp"
        android:hint="Departure Time" />

    <EditText
        android:id="@+id/editText_capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_deptTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="95dp"
        android:hint="Flight Capacity" />

    <EditText
        android:id="@+id/editText_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_capacity"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="117dp"
        android:hint="Price" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="49dp"
        android:layout_below="@+id/editText_price"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="30dp"
        android:text="Add Flight"
        android:background="@color/colorAccent"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="18sp"/>


</RelativeLayout>