<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DisplayLog">


    <TextView
        android:id="@+id/textView_log_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="118dp"
        android:text="Logged Transactions"

        />

    <TextView
        android:id="@+id/textView_log_display"
        android:layout_width="329dp"
        android:layout_height="374dp"
        android:layout_below="@+id/textView_log_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scrollbars="vertical"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="31dp"
        android:text="" />

    <Button
        android:id="@+id/button_confirm_log"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_below="@+id/textView_log_display"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="46dp"
        android:text="CONFIRM" />
</RelativeLayout>