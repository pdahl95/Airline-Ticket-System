<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_flights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:text="@string/available_flights"
        android:textSize="40sp" />


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_flights"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="14dp">

        <RadioGroup
            android:id="@+id/radioGroup_flights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


    </ScrollView>

    <Button
        android:id="@+id/button_select_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Flight"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:textSize="18sp"
        android:textColor="#ffff"
        />

    <TextView
        android:id="@+id/textView_show_dept"
        android:layout_width="156dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:textSize="26sp"
        android:textColor="@color/colorPrimary"
        android:layout_toEndOf="@+id/textView_dept"
        android:layout_toRightOf="@+id/textView_dept" />

    <TextView
        android:id="@+id/textView_show_arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_show_dept"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:textColor="@color/colorPrimary"
        android:layout_toEndOf="@+id/textView_arr"
        android:layout_toRightOf="@+id/textView_arr"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView_dept"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="99dp"
        android:text="Departure: "
        android:textColor="@color/colorAccent"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/textView_arr"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_dept"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="0dp"
        android:text="Arrival: "
        android:textColor="@color/colorAccent"
        android:textSize="32sp" />


</RelativeLayout>